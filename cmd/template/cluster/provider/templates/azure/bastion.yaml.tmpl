apiVersion: v1
kind: Secret
metadata:
  creationTimestamp: null
  labels:
    "release.giantswarm.io/version": "{{ .Version }}"
    "giantswarm.io/cluster": "{{ .Name }}"
    "cluster.x-k8s.io/cluster-name": "{{ .Name }}"
    "giantswarm.io/organization": "{{ .Owner }}"
    "cluster.x-k8s.io/watch-filter": "capi"
    "cluster.x-k8s.io/role": "bastion"
  name: {{ .Name }}-bastion
  namespace: {{ .Namespace }}
data:
  value: {{ .BastionIgnitionSecretBase64 }}
type: cluster.x-k8s.io/secret
---
apiVersion: cluster.x-k8s.io/v1alpha3
kind: MachineDeployment
metadata:
  creationTimestamp: null
  labels:
    "release.giantswarm.io/version": "{{ .Version }}"
    cluster.x-k8s.io/role: bastion
    "giantswarm.io/cluster": "{{ .Name }}"
    "cluster.x-k8s.io/cluster-name": "{{ .Name }}"
    "giantswarm.io/organization": "{{ .Owner }}"
    "cluster.x-k8s.io/watch-filter": "capi"
  name: {{ .Name }}-bastion
  namespace: {{ .Namespace }}
spec:
  clusterName: {{ .Name }}
  replicas: 1
  selector:
    matchLabels:
      cluster.x-k8s.io/cluster-name: {{ .Name }}
      cluster.x-k8s.io/deployment-name: {{ .Name }}-bastion
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
    type: RollingUpdate
  template:
    metadata:
      labels:
        cluster.x-k8s.io/cluster-name: {{ .Name }}
        cluster.x-k8s.io/deployment-name: {{ .Name }}-bastion
    spec:
      bootstrap:
        dataSecretName: {{ .Name }}-bastion
      clusterName: {{ .Name }}
      infrastructureRef:
        apiVersion: infrastructure.cluster.x-k8s.io/v1alpha4
        kind: AzureMachineTemplate
        name: {{ .Name }}-bastion
      version: v0.0.0
---
apiVersion: infrastructure.cluster.x-k8s.io/v1alpha4
kind: AzureMachineTemplate
metadata:
  labels:
    "release.giantswarm.io/version": "{{ .Version }}"
    cluster.x-k8s.io/role: bastion
    "giantswarm.io/cluster": "{{ .Name }}"
    "cluster.x-k8s.io/cluster-name": "{{ .Name }}"
    "giantswarm.io/organization": "{{ .Owner }}"
    "cluster.x-k8s.io/watch-filter": "capi"
    "cluster.x-k8s.io/control-plane": "true"
  name: {{ .Name }}-bastion
  namespace: {{ .Namespace }}
spec:
  template:
    spec:
      acceleratedNetworking: false
      allocatePublicIP: true
      image:
        marketplace:
          publisher: "kinvolk"
          offer: "flatcar-container-linux-free"
          sku: "stable"
          version: "2905.2.3"
          thirdPartyImage: true
      osDisk:
        diskSizeGB: 30
        osType: Linux
      subnetName: {{ .Name }}-bastion
      sshPublicKey: ""
      vmSize: {{ .BastionVMSize }}
